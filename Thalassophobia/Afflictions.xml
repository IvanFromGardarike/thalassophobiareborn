        <ReduceAffliction identifier="bloodloss" amount="0.2" />
        <ReduceAffliction identifier="damage" strength="0.15" />
      </StatusEffect>
    </Effect>
        <icon texture="Mods/Thalassophobia/UI/MainIconsAtlas.png" sourcerect="128,640,128,128" color="139,60,42,255" origin="0,0"/>
</Affliction>
	
<Affliction
    name="Food Poisoning"
    identifier="thal_foodpoisoning"
    description="The patient reports extreme discomfort in their abdomen, likely stemming from eating infected or unclean food. It is harder for them to walk, and nutrition from all food is wasted fighting the malignant bacteria in the stomach."
    type="poison"
    causeofdeathdescription="Died of food poisoning."
    selfcauseofdeathdescription="You have died of food poisoning."
    limbspecific="false"
    indicatorlimb="Torso"
    showiconthreshold="10"
    maxstrength="100">
    <Effect minstrength="5" maxstrength="30" minscreendistort="0.0"
      maxscreendistort="0.5"
      strengthchange="-0.1">
      <StatusEffect target="Character" SpeedMultiplier="0.8" setvalue="true">
        <ReduceAffliction identifier="thal_nutrition" amount="0.1" />
      </StatusEffect>
    </Effect>
    <Effect minstrength="30" maxstrength="100" minscreendistort="0.5"
      maxscreendistort="0.9"
      strengthchange="-0.1">
      <StatusEffect target="Character" SpeedMultiplier="0.6" setvalue="true">
        <ReduceAffliction identifier="thal_nutrition" amount="0.1" />
        <Affliction identifier="thal_diarrhea" amount="0.2" />
      </StatusEffect>
    </Effect>
        <icon texture="Mods/Thalassophobia/UI/MainIconsAtlas.png" sourcerect="0,640,128,128" color="139,60,42,255" origin="0,0"/>
</Affliction>

